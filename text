(function() {
  const BASE = 'https://unsplash-plugin.vercel.app/widget.js';
  const s = document.createElement('script');
  s.src = BASE;
  s.async = true;
  s.onload = () => {
    if (window.VennWidget) {
      window.VennWidget.init();
      console.log('[VENN] Widget loaded');
    } else {
      console.error('[VENN] Widget failed to initialize');
    }
  };
  document.head.appendChild(s);
})();
