(function() {
  const BASE = 'https://unsplash-plugin.vercel.app/';
  const s = document.createElement('script');
  s.src = BASE;
  s.async = true;
  s.onload = () => {
    if (window.VennWidget) {
         window.VennWidget.init({
            hiddenInputSelector: '.HashedImageID',
            altInputSelector: '.dev-alt-tag'
        });

      console.log('[VENN] Widget loaded');
    } else {
      console.error('[VENN] Widget load failed');
    }
  };
  document.head.appendChild(s);
})();
